{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["credentials/**/*.ts", "nodes/**/*.ts"]
} 